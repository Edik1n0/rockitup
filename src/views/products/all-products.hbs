<div class="repo__productos">
    <div class="container">
        <div class="row">
            {{#each productos}}
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title d-flex justify-content-between align-items-center">
                            {{producto}} <a href="/products/edit/{{_id}}"><i class="icon-pencil"></i></a>
                        </h4>
                        <p>$ {{valor}} USD</p>
                        <form action="/products/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger btn-block btn-sm">
                                Eliminar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="card mx-auto">
                <div class="card-body">
                    <p class="lead">No tienes productos a√∫n</p>
                    <a href="/products/add" class="btn btn-dark btn-block">
                        Agrega uno nuevo
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

{{>footer}}