<div class="container" style="margin-top: 60px; position: relative;">
    {{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{text}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{/each}}

    <div class="col-md-4 mx-auto" style="margin-top: 60px">
        <div class="card">
            <div class="card-header">
                <h3>Agregar nuevo producto</h3>
            </div>
            <div class="card-body">
                <form action="/products/new-product" method="POST">
                    <div class="form-group">
                        <input type="text" name="producto" class="form-control" placeholder="Pulsera Calaveras">
                    </div>
                    <div class="form-group">
                        <input type="number" name="valor" class="form-control" id="" placeholder="USD">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-dark btn-block">
                            Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>