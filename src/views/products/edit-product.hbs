<div class="col-md-4 mx-auto" style="margin-top: 60px">
    <div class="card">
        <div class="card-header">
            <h3>Edita el producto</h3>
        </div>
        <div class="card-body">
            <form action="/products/edit-product/{{product._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="producto" class="form-control" value="{{product.producto}}">
                </div>
                <div class="form-group">
                    <input type="number" name="valor" class="form-control" value="{{product.valor}}">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-dark btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>