<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4>Registra un usuario</h4>
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                <div class="form__reg--title">
                    <h4><em>Todos los campos son obligatorios (*)</em></h4>
                </div>
                    <div class="form-group">
                        <label><em>Nombre del nuevo usuario (*):</em></label>
                        <input type="text" name="name" class="form-control" placeholder="Armando Casas"
                        value="{{name}}">
                    </div>
                    <div class="form-group">
                        <label><em>Correo electrónico (*):</em></label>
                        <input type="email" name="email" class="form-control" placeholder="usuario@sistema.com"
                        value="{{email}}">
                    </div>
                    <div class="form-group">
                        <label><em>Asigne una Contraseña (*):</em></label>
                        <input type="password" name="password" class="form-control"
                        value="{{password}}">
                    </div>
                    <div class="form-group">
                        <label><em>Confirme la Contraseña (*):</em></label>
                        <input type="password" name="confirm_password" class="form-control"
                        value="{{confirm_password}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-dark btn-block">
                            Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>